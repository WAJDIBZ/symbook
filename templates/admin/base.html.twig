{% block body %}
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
		<div class="bg-gray-800 rounded-xl shadow-xl border border-gray-700 p-6">
			<h1 class="text-2xl font-bold text-white mb-4">Contenu par défaut</h1>
			<p class="text-gray-300">Bienvenue dans l'interface d'administration. Veuillez sélectionner une option dans la barre de navigation.</p>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		// Toggle mobile menu
document.addEventListener('DOMContentLoaded', function () {
const mobileMenuButton = document.querySelector('[data-bs-toggle="collapse"]');
const mobileMenu = document.getElementById('mobile-menu');

if (mobileMenuButton && mobileMenu) {
mobileMenuButton.addEventListener('click', function () {
mobileMenu.classList.toggle('hidden');
});
}
});
	</script>
{% endblock %}
