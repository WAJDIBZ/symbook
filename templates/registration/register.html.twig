{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div
		class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
		<!-- Header/Title -->
		<div class="text-center mb-8">
			<h2 class="font-display text-3xl font-bold text-gray-900">
				Rejoignez notre communauté
			</h2>
			<p class="mt-2 text-sm text-gray-600">
				Créez votre compte pour profiter de tous nos services
			</p>
		</div>

		<!-- Registration Card -->
		<div
			class="bg-white rounded-xl shadow-xl overflow-hidden">
			<!-- Card Header -->
			<div class="px-6 py-4 bg-gradient-to-r from-indigo-800 to-purple-700">
				<h3 class="text-xl font-medium text-white">Créer un compte</h3>
			</div>

			<!-- Card Body -->
			<div class="px-6 py-6">
				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="mb-6 rounded-md bg-red-50 p-4 border border-red-200">
						<div class="flex">
							<div class="flex-shrink-0">
								<i class="fas fa-exclamation-circle text-red-400"></i>
							</div>
							<div class="ml-3">
								<p class="text-sm font-medium text-red-800">{{ flash_error }}</p>
							</div>
						</div>
					</div>
				{% endfor %}

				{{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

				<!-- Name Fields -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						{{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						{{ form_widget(registrationForm.nom, {'attr': {
              'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
              'placeholder': 'Votre nom'
            }}) }}
						{{ form_errors(registrationForm.nom, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
					</div>

					<div>
						{{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						{{ form_widget(registrationForm.prenom, {'attr': {
              'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
              'placeholder': 'Votre prénom'
            }}) }}
						{{ form_errors(registrationForm.prenom, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
					</div>
				</div>

				<!-- Email Field -->
				<div>
					{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					<div class="relative rounded-md shadow-sm">
						<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
							<i class="fas fa-envelope text-gray-400"></i>
						</div>
						{{ form_widget(registrationForm.email, {'attr': {
              'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
              'placeholder': 'votre@email.com'
            }}) }}
					</div>
					{{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
				</div>

				<!-- Address Field -->
				<div>
					{{ form_label(registrationForm.adresse, 'Adresse', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					<div class="relative rounded-md shadow-sm">
						<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
							<i class="fas fa-home text-gray-400"></i>
						</div>
						{{ form_widget(registrationForm.adresse, {'attr': {
              'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
              'placeholder': 'Votre adresse complète'
            }}) }}
					</div>
					{{ form_errors(registrationForm.adresse, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
				</div>

				<!-- Password Fields -->
				<div class="space-y-6">
					<div>
						{{ form_label(registrationForm.password.first, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						<div class="relative rounded-md shadow-sm">
							<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
								<i class="fas fa-lock text-gray-400"></i>
							</div>
							{{ form_widget(registrationForm.password.first, {'attr': {
                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
                'placeholder': 'Choisissez un mot de passe sécurisé'
              }}) }}
						</div>
						{{ form_errors(registrationForm.password.first, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
					</div>

					<div>
						{{ form_label(registrationForm.password.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						<div class="relative rounded-md shadow-sm">
							<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
								<i class="fas fa-lock text-gray-400"></i>
							</div>
							{{ form_widget(registrationForm.password.second, {'attr': {
                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
                'placeholder': 'Confirmez votre mot de passe'
              }}) }}
						</div>
						{{ form_errors(registrationForm.password.second, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
					</div>
				</div>

				<!-- Terms Checkbox -->
				<div class="flex items-start">
					<div class="flex items-center h-5">
						{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
					</div>
					<div class="ml-3 text-sm">
						{{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'font-medium text-gray-700'}}) }}
						<p class="text-gray-500">En vous inscrivant, vous acceptez nos conditions d'utilisation et notre politique de confidentialité.</p>
						{{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
					</div>
				</div>

				<!-- Submit Button -->
				<div>
					<button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
						<i class="fas fa-user-plus mr-2"></i>
						S'inscrire
					</button>
				</div>
				{{ form_end(registrationForm) }}
			</div>

			<!-- Card Footer -->
			<div class="px-6 py-4 bg-gray-50 border-t border-gray-100 text-center">
				<p class="text-sm text-gray-600">
					Vous avez déjà un compte?
					<a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
						Se connecter
					</a>
				</p>
			</div>
		</div>

		<!-- Security Info -->
		<div class="mt-8 flex items-center justify-center">
			<i class="fas fa-shield-alt text-gray-400 mr-2"></i>
			<span class="text-sm text-gray-500">Vos données personnelles sont sécurisées et ne seront jamais partagées.</span>
		</div>
	</div>
{% endblock %}
